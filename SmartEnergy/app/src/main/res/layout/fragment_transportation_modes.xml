<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:background="@color/turkey"
    android:padding="20dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_bike_white_48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pref_summary_used_transportation"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:textSize="18sp"
        android:paddingBottom="20sp"/>

    <CheckBox
        android:buttonTintMode="src_atop"
        android:id="@+id/checkBoxAirplane"
        android:text="@string/airplane"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/checkBoxTrain"
        android:text="@string/train"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/checkBoxCar"
        android:text="@string/car"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/checkBoxTram"
        android:text="@string/tram"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/checkBoxBicycle"
        android:text="@string/bicycle"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>