<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_header_transport"
        android:key="pref_key_transport_settings">

        <MultiSelectListPreference
            android:key="@string/pref_key_used_transportation"
            android:title="@string/pref_title_used_transportation"
            android:entries="@array/preference_array_used_transportation_entries"
            android:entryValues="@array/preference_array_used_transportation_values"
            android:summary="@string/pref_summary_used_transportation"/>

        <CheckBoxPreference
            android:key="@string/pref_key_knows_usage"
            android:title="@string/pref_title_knows_usage"
            android:summary="@string/pref_summary_knows_usage"/>

        <EditTextPreference
            android:key="@string/pref_key_usage"
            android:numeric="decimal"
            android:defaultValue="0.0"
            android:summary="@string/pref_summary_usage"/>

        <ListPreference
            android:key="@string/pref_key_car_type"
            android:title="@string/pref_title_car_type"
            android:defaultValue="@string/preference_car_type_values_default"
            android:entries="@array/preference_array_car_type_entries"
            android:entryValues="@array/preference_array_car_type_values"
            android:summary="@string/pref_summary_car_type"/>


        <ListPreference
            android:key="@string/pref_key_fuel_type"
            android:title="@string/pref_title_fuel_type"
            android:defaultValue="@string/preference_fuel_type_values_default"
            android:entries="@array/preference_array_fuel_type_entries"
            android:entryValues="@array/preference_array_fuel_type_values"
            android:summary="@string/pref_summary_fuel_type"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_header_home"
        android:key="pref_key_home_settings">


    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_header_lifestyle"
        android:key="pref_key_lifestyle_settings">

        <ListPreference
            android:key="@string/pref_key_diet_type"
            android:title="@string/pref_title_diet_type"
            android:defaultValue="@string/preference_diet_type_values_default"
            android:entries="@array/preference_array_diet_type_entries"
            android:entryValues="@array/preference_array_diet_type_values"
            android:summary="@string/pref_summary_diet_type"/>

    </PreferenceCategory>
</PreferenceScreen>
